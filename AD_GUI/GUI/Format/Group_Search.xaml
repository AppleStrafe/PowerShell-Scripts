<Window x:Class="User_Copy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:User_Copy"
        mc:Ignorable="d"
        Title="PACS | Group Search" Height="280" Width="450">
    <Grid>
        <DataGrid Name="Group_Datagrid" AutoGenerateColumns="True" Margin="0,0,0,48" >
		    <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="180" />
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="233"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="Select_Group" Content="Select" HorizontalAlignment="Left" Margin="245,195,0,0" VerticalAlignment="Top" Background="#FF16B200" IsDefault="True" Width="101" Height="29" FontWeight="Bold" FontSize="18" IsEnabled="False"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="10,195,0,0" VerticalAlignment="Top" Background="#FFA70707" Width="94" Height="29" FontWeight="Bold" FontSize="18" IsCancel="True"/>
    </Grid>
</Window>
